<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:src="@drawable/loading" 
        android:contentDescription="@string/hello_world"/>
    
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_gravity="center">
        <ProgressBar android:id="@+id/head_progressBar" style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" />
        <TextView android:id="@+id/head_tipsTextView" android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" android:text="@string/load_data" android:textSize="18sp" 
			    android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>